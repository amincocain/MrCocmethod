#!/bin/bash

# Configuration Paths
CONF_FILE="/etc/gre_tunnel_config.sh"
MONITOR_FILE="/usr/local/bin/gre_monitor.sh"
VARS_FILE="/etc/gre_vars.conf"
TG_CONF="/etc/gre_tg.conf"
TYPE_CONF="/etc/server_type.conf"

# --- Tashkhis e Noe Server (Faghat baraye bare aval) ---
if [ ! -f "$TYPE_CONF" ]; then
    echo -e "\e[1;36mIn Server kodam ast?\e[0m"
    echo "1) IRAN"
    echo "2) KHAREJ"
    read -p "Lotfan entekhab konid [1-2]: " stype
    if [ "$stype" == "1" ]; then
        echo "SERVER_TYPE=IRAN" > "$TYPE_CONF"
    else
        echo "SERVER_TYPE=KHAREJ" > "$TYPE_CONF"
    fi
fi
source "$TYPE_CONF"

show_menu() {
    echo -e "\n\e[1;34m--- Menu Tunnel Priv8 MrCoc ---\e[0m"
    if [ "$SERVER_TYPE" == "IRAN" ]; then
        echo -e "\e[1;32m[ Mode: IRAN ]\e[0m"
        echo "1) Sakht e Tunnel va Port Forwarding (Iran be Kharej)"
        echo "2) Namayeshe Vaziat e Tunnel-ha va Port-ha"
        echo -e " \e[1;31m3) TEST PACKET LOSS (Unlimited Test)\e[0m"
        echo "4) Taghyire MTU dar Tunnel-haye Mojood"
        echo "5) Pak-sazi va Hazfe Kamel (Uninstall)"
    else
        echo -e "\e[1;35m[ Mode: KHAREJ ]\e[0m"
        echo "1) Sakht e Tunnel (Etesal az Iran)"
        echo "2) Tanzimate Telegram & Monitoring (Baraye Ghat-shodan)"
        echo "3) Faal-sazi e Mandegari (Auto-Run)"
        echo "4) Taghyire MTU dar Tunnel-haye Mojood"
        echo "5) Pak-sazi va Hazfe Kamel (Uninstall)"
    fi
    echo "6) Khorooj"
    echo -e "\e[1;33m----------------------------------------\e[0m"
    read -p "Lotfan yek gozine entekhab konid [1-6]: " choice
}

# --- Bakhsh e Test Packet Loss (Faghat dar Iran niaz ast) ---
test_connection() {
    while true; do
        echo -e "\n\e[1;31m--- TEST PACKET LOSS ---\e[0m"
        read -p "IPv4 Server e KHAREJ ro vared konid (ya 'exit'): " test_ip
        [[ "$test_ip" == "exit" ]] && break
        echo -e "\e[1;33mDar hal e check kardane 20 packet...\e[0m"
        ping -c 20 -q $test_ip > /tmp/ping_result.txt &
        pid=$!
        spin='-\|/'
        while kill -0 $pid 2>/dev/null; do
            i=$(( (i+1) %4 )); printf "\r${spin:$i:1} Sabr konid..."; sleep 0.2
        done
        printf "\r"
        if [ -s /tmp/ping_result.txt ]; then
            loss=$(grep -oP '\d+(?=% packet loss)' /tmp/ping_result.txt)
            latency=$(grep -oP 'rtt min/avg/max/mdev = \d+\.\d+/\K\d+\.\d+' /tmp/ping_result.txt)
            echo -e "\n\e[1;35m--- NATIJE TEST ---\e[0m"
            [ "$loss" -eq 0 ] && echo -e "\e[1;32mâœ… Loss: $loss% (Ali)\e[0m" || echo -e "\e[1;31mâŒ Loss: $loss%\e[0m"
            echo -e "\e[1;34mðŸ“Š Latency: $latency ms\e[0m"
        fi
    done
}

# --- Sakht e Tunnel ---
setup_tunnel() {
    read -p "Shomare Tunnel (1, 2, ...): " num
    if [ "$SERVER_TYPE" == "IRAN" ]; then
        read -p "IPv4 hamin Server (IRAN): " localip
        read -p "IPv4 Server e KHAREJ: " remoteip
        read -p "IP Dakheli e Iran (Pishfarz: 10.0.$num.1): " tip
        read -p "Port-haye Forward (mesle 80,443): " ports
        target_remote="${tip%.*}.2"
    else
        read -p "IPv4 hamin Server (KHAREJ): " localip
        read -p "IPv4 Server e IRAN: " remoteip
        read -p "IP Dakheli e Kharej (Pishfarz: 10.0.$num.2): " tip
        echo "IRAN_IP_$num=$remoteip" >> $VARS_FILE
    fi

    read -p "MTU (Enter baraye 1436): " usermtu
    mtu=${usermtu:-1436}

    ip tunnel add gre$num mode gre remote $remoteip local $localip ttl 255
    ip link set gre$num up
    ip addr add $tip/30 dev gre$num
    ip link set dev gre$num mtu $mtu

    if [ "$SERVER_TYPE" == "IRAN" ]; then
        sysctl -w net.ipv4.ip_forward=1 > /dev/null
        IFS=',' read -ra ADDR <<< "$ports"
        for port in "${ADDR[@]}"; do
            iptables -t nat -A PREROUTING -p tcp --dport $port -j DNAT --to-destination $target_remote
            iptables -t nat -A PREROUTING -p udp --dport $port -j DNAT --to-destination $target_remote
        done
        iptables -t nat -A POSTROUTING -d $target_remote -j MASQUERADE
    fi

    echo "ip tunnel add gre$num mode gre remote $remoteip local $localip ttl 255" >> $CONF_FILE
    echo "ip link set gre$num up" >> $CONF_FILE
    echo "ip addr add $tip/30 dev gre$num" >> $CONF_FILE
    echo "ip link set dev gre$num mtu $mtu" >> $CONF_FILE
    echo -e "\e[1;32mâœ… Tunnel $num sakhte shod.\e[0m"
}

# --- Telegram (Faghat dar Kharej) ---
setup_telegram() {
    read -p "Bot Token: " token
    read -p "Chat ID: " chatid
    echo "TG_TOKEN=\"$token\"" > $TG_CONF
    echo "TG_CHATID=\"$chatid\"" >> $TG_CONF
    cat <<'EOF' > $MONITOR_FILE
#!/bin/bash
source /etc/gre_tg.conf
source /etc/gre_vars.conf
check() {
    ping -c 3 $1 > /dev/null 2>&1
    if [ $? -ne 0 ]; then
        curl -s -X POST "https://api.telegram.org/bot$TG_TOKEN/sendMessage" -d "chat_id=$TG_CHATID&text=âš ï¸ ALERT! Server e IRAN ($1) GHAT SHOD!"
    fi
}
for ip in $(grep "IRAN_IP_" /etc/gre_vars.conf | cut -d'=' -f2); do check $ip; done
EOF
    chmod +x $MONITOR_FILE
    (crontab -l 2>/dev/null | grep -v "$MONITOR_FILE" ; echo "*/5 * * * * $MONITOR_FILE") | crontab -
    echo -e "\e[1;32mâœ… Monitoring e Telegram faal shod.\e[0m"
}

# --- MTU va Status va Uninstall (Moshtarak) ---
change_mtu() {
    read -p "Esme Tunnel (gre1, ...): " tname
    current_mtu=$(ip link show $tname | awk '{print $5}')
    read -p "MTU Jadid baraye $tname (Feli: $current_mtu): " newmtu
    ip link set dev $tname mtu $newmtu
    sed -i "s/ip link set dev $tname mtu.*/ip link set dev $tname mtu $newmtu/g" $CONF_FILE
    echo "âœ… OK."
}

uninstall() {
    crontab -l 2>/dev/null | grep -v "$MONITOR_FILE" | crontab - 2>/dev/null
    rm $TG_CONF $VARS_FILE $CONF_FILE $MONITOR_FILE $TYPE_CONF /usr/local/bin/gre_startup.sh 2>/dev/null
    ip tunnel show | awk '{print $1}' | cut -d':' -f1 | xargs -I {} ip link set {} down 2>/dev/null
    ip tunnel show | awk '{print $1}' | cut -d':' -f1 | xargs -I {} ip tunnel del {} 2>/dev/null
    iptables -F -t nat
    echo -e "\e[1;31mâœ… Hazf shod.\e[0m"
}

# --- Main Loop ---
while true; do
    show_menu
    case $choice in
        1) setup_tunnel ;;
        2) [ "$SERVER_TYPE" == "IRAN" ] && (ip -d link show type gre; iptables -t nat -L -n -v) || setup_telegram ;;
        3) [ "$SERVER_TYPE" == "IRAN" ] && test_connection || echo "Mandegari faal shod." ;;
        4) change_mtu ;;
        5) uninstall ;;
        6) exit 0 ;;
    esac
done
